<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cafe"
    android:background="?android:selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/cafe_label_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/text_gray_light"
        android:maxLines="1"
        android:text="@string/show_detail"
        app:layout_constraintStart_toEndOf="@+id/cafe_text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cafe_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cafe_label_detail"
        app:layout_constraintBottom_toTopOf="@+id/cafe_text_address"/>

    <TextView
        android:id="@+id/cafe_text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/text_gray_light"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cafe_text_name"
        app:layout_constraintStart_toEndOf="@+id/cafe_text_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cafe_layout_divider"/>
    <TextView
        android:id="@+id/cafe_text_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/text_gray_light"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/cafe_text_name"
        app:layout_constraintStart_toStartOf="@id/cafe_text_name"
        app:layout_constraintEnd_toStartOf="@id/cafe_text_distance"
        app:layout_constraintBottom_toTopOf="@+id/cafe_layout_divider"/>
    <LinearLayout
        android:id="@+id/cafe_layout_divider"
        android:layout_width="0dp"
        android:layout_height="2px"
        android:background="@color/divider"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="@id/cafe_text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cafe_text_address"
        app:layout_constraintBottom_toTopOf="@+id/cafe_layout_info"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/cafe_layout_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/cafe_layout_divider"
        app:layout_constraintStart_toStartOf="@id/cafe_text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/cafe_img_size"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_people"/>
        <TextView
            android:id="@+id/cafe_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"/>

        <ImageView
            android:id="@+id/cafe_img_plug"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_power"/>
        <TextView
            android:id="@+id/cafe_text_plug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"/>

        <ImageView
            android:id="@+id/cafe_img_open"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_time"/>
        <TextView
            android:id="@+id/cafe_text_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"/>

        <ImageView
            android:id="@+id/cafe_img_wifi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_wifi"
            android:tint="@color/colorPrimary"
            android:layout_margin="3dp"/>
        <ImageView
            android:id="@+id/cafe_img_smoke"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_smoking"
            android:layout_margin="3dp"/>
        <ImageView
            android:id="@+id/cafe_img_parking"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_parking"
            android:layout_margin="3dp"/>
        <ImageView
            android:id="@+id/cafe_img_toilet"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_wc"
            android:layout_margin="3dp"/>
    </LinearLayout>
